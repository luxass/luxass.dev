---
import CVLayout from "../layouts/CVLayout.astro";
import CVLink from "../components/cv/CVLink.astro";
import CVEntry from "../components/cv/CVEntry.astro";
import CVProject from "../components/cv/CVProject.astro";
import { getCollection } from "astro:content";

export const prerender = true;

const projects = (await getCollection("projects")).slice(0, 6);
---

<CVLayout
  title="CV - Lucas Nørgård"
  description="CV and resume of Lucas Nørgård - Software Engineer"
  keywords={[
    "lucas nørgård",
    "luxass",
    "nørgård",
    "lucas",
    "fullstack",
    "backend",
    "frontend",
    "web developer",
    "cv",
    "resume",
    "software engineer",
  ]}
>
  <header class="mb-16 print:mb-8">
    <h1 class="text-4xl font-light text-foreground mb-2 print:text-3xl">Lucas Nørgård</h1>
    <div class="flex flex-wrap gap-x-4 gap-y-2 text-foreground print:text-sm">
      <CVLink href="mailto:lucasnrgaard@gmail.com" icon="ph:envelope" label="lucasnrgaard@gmail.com" />
      <CVLink href="https://linkedin.com/in/lucasnrgaard" icon="ph:linkedin-logo" label="@lucasnrgaard" />
      <CVLink href="https://github.com/luxass" icon="ph:github-logo" label="@luxass" />
    </div>

    <p class="mt-6 text-foreground-muted print:text-sm print:mt-4">
      Software engineer and DevOps specialist with extensive experience in web application development, software
      architecture, and infrastructure management. Currently maintaining robust Kubernetes clusters and critical
      microservices at Region Midtjylland while building secure integrations for healthcare technology.
    </p>

    <p class="mt-4 text-foreground-muted print:text-sm print:mt-2">
      Specialized in Go, Rust, TypeScript, Kotlin, and Java with expertise in Kubernetes, CI/CD, and API design.
      Passionate about developer experience, CI optimization, and creating tooling that empowers development teams.
      Committed to open source contributions and designing scalable systems with healthcare compliance experience.
    </p>
  </header>

  <section class="mb-12 print:mb-6">
    <h2 class="text-2xl font-light text-foreground mb-4 pb-2 print:text-xl print:mb-2">Experience & Education</h2>
    <div class="space-y-6 print:space-y-4">
      <CVEntry company="DevOps Engineer @ Region Midtjylland" period="September 2024 - Present" type="work">
        Architect and maintain production Kubernetes clusters supporting critical healthcare microservices. Develop
        automation tools in Go/Rust and participate in on-call incident response. Build secure, GDPR-compliant APIs for
        clinical system integration.
      </CVEntry>

      <CVEntry company="Software Developer @ Region Midtjylland" period="May 2023 - September 2024" type="work">
        Developed clinician-facing applications using TypeScript and Java Spring Boot. Implemented security features for
        healthcare compliance and built RESTful APIs serving clinical workflows.
      </CVEntry>

      <CVEntry company="Web Developer Program @ Viden Djurs" period="August 2020 - November 2023" type="education">
        Comprehensive web development education focusing on full-stack programming, API design, and modern web
        technologies.
      </CVEntry>
    </div>
  </section>

  <section class="mb-12 print:mb-6">
    <h2 class="text-2xl font-light text-foreground mb-4 pb-2 print:text-xl print:mb-2">Open Source Projects</h2>
    <p class="text-foreground-muted text-sm mb-6 print:text-xs print:mb-3">
      Active contributor to 15+ open source projects focused on developer tooling and TypeScript ecosystem.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 print:grid-cols-2 print:gap-2">
      {
        projects.map((project) => (
          <CVProject title={project.data.title} description={project.data.description} href={project.data.href} />
        ))
      }
    </div>
  </section>
</CVLayout>
