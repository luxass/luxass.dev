---
import type { CollectionEntry } from "astro:content";
import { getCollection, render } from "astro:content";
import Code from "../../components/mdx-components/Code.astro";

import Pre from "../../components/mdx-components/Pre.astro";
import PageLayout from "../../layouts/PageLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { handle: post.data.handle || post.id },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;

const {
  data: { title, description, date },
} = post;

const { Content } = await render(post);

// Format dates for structured data
const publishedTime = date.toISOString();
const imageUrl = `https://image.luxass.dev/api/image/post?title=${encodeURIComponent(title)}&description=${encodeURIComponent(description)}&date=${date.toISOString()}`;

export const prerender = true;
---

<PageLayout
  title={`${title} - posts - luxass.dev`}
  description={description}
  image={imageUrl}
  type="article"
  publishedTime={publishedTime}
  modifiedTime={publishedTime}
>
  <h1 class="mt-8">
    {title}
  </h1>
  <article class="tracking-wide typography">
    <Content
      components={{
        code: Code,
        pre: Pre,
      }}
    />
  </article>
</PageLayout>
